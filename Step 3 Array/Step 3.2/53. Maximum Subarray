https://leetcode.com/problems/maximum-subarray/submissions/915682114/

class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n = nums.size();
        int currentSum = nums[0];
        int maxSum = nums[0];
        for(int i = 1; i < n; i++){
            if(currentSum >= 0){
                currentSum = currentSum + nums[i];
            }
            else{
                currentSum = nums[i];
            }
            maxSum = max(currentSum, maxSum);
        }
        return maxSum;
    }
};