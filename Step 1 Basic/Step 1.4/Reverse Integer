<!-- https://leetcode.com/problems/reverse-integer/ -->

class Solution {
public:
    int reverse(int x) {
        int reverseNum = 0;
        while(x != 0){
            if(reverseNum > INT_MAX/10 || reverseNum < INT_MIN/10){
                return 0;
            }
            else{
            int lastDigit = x%10;
            reverseNum = reverseNum * 10 + lastDigit;
            x = x/10;
            }
        }
        return reverseNum;
    }
};

